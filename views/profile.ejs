<%- include('./partials/header') %>

<div class="container py-4">
  <div class="row">
    <div class="col-lg-8 mx-auto">
      <div class="card border-0 shadow-sm">
        <div class="card-body p-0">
          <div class="text-center p-5 bg-light rounded-top" style="background: linear-gradient(135deg, #f5f5f7, #e8e8ed);">
            <div class="display-1 text-primary mb-3">
              <i class="fas fa-user-circle"></i>
            </div>
            <h2 class="fw-bold"><%= user.name %></h2>
            <p class="text-muted mb-3"><%= user.email %></p>
            <span class="badge <%= user.role === 'admin' ? 'bg-danger' : 'bg-primary' %> px-3 py-2">
              <%= user.role === 'admin' ? 'แอดมิน' : 'สมาชิก' %>
            </span>
          </div>
          
          <div class="p-4">
            <h4 class="fw-bold mb-4">ข้อมูลผู้ใช้</h4>
            
            <div class="row mb-4">
              <div class="col-md-6 mb-3">
                <div class="card h-100 border-0 bg-light">
                  <div class="card-body">
                    <h6 class="text-muted mb-2">ชื่อ-นามสกุล</h6>
                    <p class="fs-5 mb-0"><%= user.name %></p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-6 mb-3">
                <div class="card h-100 border-0 bg-light">
                  <div class="card-body">
                    <h6 class="text-muted mb-2">อีเมล</h6>
                    <p class="fs-5 mb-0"><%= user.email %></p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-6 mb-3">
                <div class="card h-100 border-0 bg-light">
                  <div class="card-body">
                    <h6 class="text-muted mb-2">สิทธิ์การใช้งาน</h6>
                    <p class="fs-5 mb-0">
                      <span class="badge <%= user.role === 'admin' ? 'bg-danger' : 'bg-primary' %>">
                        <%= user.role === 'admin' ? 'แอดมิน' : 'สมาชิก' %>
                      </span>
                    </p>
                  </div>
                </div>
              </div>
              
              <div class="col-md-6 mb-3">
                <div class="card h-100 border-0 bg-light">
                  <div class="card-body">
                    <h6 class="text-muted mb-2">เข้าร่วมเมื่อ</h6>
                    <p class="fs-5 mb-0"><%= new Date().toLocaleDateString('th-TH', { year: 'numeric', month: 'long', day: 'numeric'}) %></p>
                  </div>
                </div>
              </div>
            </div>

            <div class="d-flex flex-column flex-sm-row gap-3 justify-content-center">
              <% if (user.role === 'admin') { %>
                <a href="/admin" class="btn btn-primary">
                  <i class="fas fa-tachometer-alt me-2"></i>ไปยังหน้าแอดมิน
                </a>
              <% } %>
              <a href="/auth/logout" class="btn btn-outline-primary">
                <i class="fas fa-sign-out-alt me-2"></i>ออกจากระบบ
              </a>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>

<%- include('./partials/footer') %>